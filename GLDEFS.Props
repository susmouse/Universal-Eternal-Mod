// Grey Column
object HC_Column
{
    frame COLUA { light HC_LAMP }
}

pointlight HC_LAMP
{
    color 1.0 1.0 0.8
    size 84
    offset 0 44 0
	attenuate 1
}

// Short tech lamp
pulselight HC_SMALLLAMP
{
    color 0.8 0.8 1.0
    size 84
    secondarySize 87
    interval 0.4
    offset 0 44 0
	attenuate 1
}

object HC_TechLamp2
{
    frame TLP2A { light HC_SMALLLAMP }
	frame TLP2B { light HC_SMALLLAMP }
	frame TLP2C { light HC_SMALLLAMP }
	frame TLP2D { light HC_SMALLLAMP }
}

// Tall tech lamp
pulselight HC_BIGLAMP
{
    color 0.8 0.8 1.0
    size 96
    secondarySize 99
    interval 0.4
    offset 0 72 0
	attenuate 1
}

object HC_TechLamp
{
    frame TLMPA { light HC_BIGLAMP }
	frame TLMPB { light HC_BIGLAMP }
	frame TLMPC { light HC_BIGLAMP }
	frame TLMPD { light HC_BIGLAMP }
}